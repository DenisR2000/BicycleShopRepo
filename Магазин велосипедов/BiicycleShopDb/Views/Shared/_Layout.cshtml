<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <style>
        html,
        body{
            height: 100%;
            opacity: 1;
        }
        .wraper{
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }
        .content {
            flex: 1 1 auto;
        }
        header {
            background-size: cover;
            background-image: url("https://images.unsplash.com/photo-1506316940527-4d1c138978a0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2089&q=80");
            color: white;
            font-weight: bolder;
            height: 730px;
            width: 100%;
            padding: 0;
            margin: 0;
            color: white;
            font-family: sans-serif;
            font-size: 20px;
        }

        header a {
            background-color: white;
        }
        
        li{
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            margin: 2px;
        }
        li a {
            text-decoration: none;
            color: white;
        }
        ul li {
            font-size: 24px;
            height: 30px;
            width: 30px;
            background-color: #cbf2b3;
            color: white;
        }
        ul li:hover {
            background-color: #70ba87;
        }
        .home_btn:hover, .admin_btn:hover, .login_btn:hover, .My_Cart_btn:hover, .Registr_btn:hover {
            background: rgba(0,0,0,0.5);
        }
        @*
         Images   
        *@
        .imgInst {
            margin-bottom: 10px;
            height: 60px;
            width: 60px;
            margin-left: 10px;
            margin-top: 25px;
            border-radius: 10px;
        }

        .moments_image {
        }

        .momentimgYoutube {
            height: 60px;
            width: 60px;
            background-image: url("insta.png");
        }

        .imgInst:hover {
        }

        .imgFb {
            margin-bottom: 10px;
            height: 60px;
            width: 60px;
            margin-left: 10px;
            margin-top: 25px;
            border-radius: 10px;
        }

            .imgFb:hover {
                background-image: url("fb.png");
            }

        .imgYoutube {
            margin-bottom: 10px;
            height: 60px;
            width: 60px;
            margin-left: 10px;
            margin-top: 25px;
            border-radius: 10px;
        }

            .imgYoutube:hover {
            }

        footer {
            background-size: cover;
            background-repeat: no-repeat;
            background-image: url('https://images.unsplash.com/photo-1473773508845-188df298d2d1?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MzF8fG5hdHVyZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=60'); margin: 0;
            margin: 5px;
            margin-top: 5px;
            height: auto;
        }

        .ConteinerFooter {
            display: flex;
            flex-wrap: wrap;
            flex-flow: row;
        }

        .Section1 {
            padding-top: 20px;
            padding-bottom: 10px;
            margin-left: 15%;
            display: flex;
            flex-flow: column;
        }

        .Section2 {
            padding-top: 20px;
            padding-bottom: 10px;
            margin-left: 25%;
            display: flex;
            flex-flow: column;
        }

        .Section1 span {
            text-transform: uppercase;
            font-weight: bolder;
            color: white;
            font-size: 15px;
            padding-bottom: 5px;
        }
        .Section1 a {
            text-decoration: none;
            text-transform: uppercase;
            font-weight: bolder;
            color: white;
            font-size: 15px;
            padding-bottom: 5px;
        }

        .Section2 span {
            text-transform: uppercase;
            font-weight: bolder;
            color: white;
            font-size: 15px;
            padding-bottom: 5px;
        }
        .header__title {
            color: white;
            font-family: sans-serif;
            margin: 20px 10px;

            transform: translate(0px, 150%);
            opacity: 0;
            transition: all 0.8s ease 0s;
        }
        .header__title._active {
            transform: translate(0px, 0px);
            opacity: 1;
        }
        .header__text {
            font-family: sans-serif;
            font-size: 16px;
            margin-left: 10px;
            margin-top: -5px;
            transform: translate(0px, 150%);
            opacity: 0;
            transition: all 0.8s ease 0s;
        }
        .header__text._active {
            transform: translate(0px, 0px);
            opacity: 1;
            transition: all 0.8s ease 0.4s;
        }
       @* .foolsckrin__img {
            position: relative;
            z-index: 5;
            height: 100%;
            width: 100%;
            color: #000;
            font-size: 400%;
            padding: 20px;
            margin-top: 40px;
            font-family: Arial;
            text-transform: capitalize;
        }

        .img {
            position: absolute;
            z-index: -1;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            opacity: .4;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-image: url('https://images.unsplash.com/photo-1563460937-8e3fd7f161f6?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8YnljaWNsZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60')
        }*@
        .foolsckrin__img {

            width: 100%;
            height: 100%;
         
        }
            .foolsckrin__img .img {
                position: absolute;
                z-index: -1;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                background: #ccc url('https://img3.akspic.ru/originals/9/1/0/0/20019-katanie_na_gornyh_velosipedah-begovye_velosport-gonki_na_velosipedah-velosiped-velosipednyj_sport-1920x1080.jpg') center center;
                opacity: .4;
                width: 100%;
                height: 100%;
            }
        .tbl {
            
            color: black;
        }
        .div{
            border: none;
            display: flex;
            flex-direction: row;
            justify-content: center;
            height: 50px;
            width: auto;
            max-width: 120px;
        }
        ._none {
            opacity: 0;
            visibility: hidden;
            transition: all 0.8s ease 0.4s;
            transform: translate(500px, 0px);
        }
       @* .visible_ {
            transform: translate(200px, 0px);
            opacity: 1;
            transition: all 0.8s ease 0s;
        }*@

    </style>
</head>
<body>

    <div class="wraper">
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="ConteinerFooter">
            <div class="Section1">
                <a asp-action="Index" asp-area="" asp-controller="Home" style="color: white; width: 80px; font-family:sans-serif;">Home</a>
                <span>Aluuul</span>
                <span>Gallery</span>
                <span>News</span>
            </div>
            <div class="Section2">
                <span>Home</span>
                <span>Aluuul</span>
                <span>Gallery</span>
                <span>News</span>
            </div>
            <div class="Section3Contacts">
                <img class="imgInst" />
                <img class="imgFb" />
                <img class="imgYoutube" />
            </div>
        </div>
        <span><hr></span>
        <!-- <div class="line"></div> -->
        <div class="ContentFinish"><a href=""><span>Details</span></a></div>
    </footer>

    <script src="~/lib/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>
